<% if @question.errors.present? %>
<% @question.errors.full_messages.each do |message| %>
  $('.question_errors').html('<%= j message %><br>');
<% end %>
<% else %>
  $('#question_<%= @question.id %>').replaceWith('<%= j render @question %>');
  $('form#edit-question-<%= @question.id %>').hide();


$('.edit-question-link').click(function(e) {
  e.preventDefault();
  $(this).hide();
  $('form#edit-question-<%= @question.id %>').show();
});



<% end %>